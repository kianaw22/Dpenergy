            var data = new FormData;
            var file = $("#ShenasnameScanPath").get(0);
            var files = file.files;

            for (var i = 0; i < files.length; i++) {
                data.append('filearray',files[i]);
            }
            data.append('path', "upload\\atachments\\Shenasname-scan");

            $.ajax({
                type: "post",
                url: '@Url.Action("UploadFile","Personel", new { area = "PersonelArea"})',
