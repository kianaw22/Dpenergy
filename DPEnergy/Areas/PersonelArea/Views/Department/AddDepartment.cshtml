@model DPEnergy.DataModelLayer.ViewModels.DepartmentViewModel
@{
    ViewData["Title"] = "AddDepartment";
}
<div class="content">
    <ul class="breadcrumb">
        <li><a asp-controller="Home" asp-action="index"><i class="icon-home2 position-left"></i> صفحه اصلی</a></li>
        <li><a href="#"><i class="position-left"></i> اطلاعات اولیه</a></li>
        <li><a asp-controller="Department" asp-action="index"><i class="icon-person position-left"></i> لیست دپارتمان ها</a></li>
        <li class="active">اضافه کردن دپارتمان</li>
    </ul>
    <div class="panel panel-heading" style="box-shadow:3px 1px 1px 0 gray; border-radius:2px;">
        <span style="font-weight:bold;">
            <i class="icon-accessibility2"></i>
            فرم ثبت دپارتمان
        </span>
    </div>


    <div class="panel panel-body container-fluid" style="border-radius:2px; box-shadow:3px 1px 1px 0 gray;
                background-color:#e6e2e2;">

        <form asp-controller="Department" asp-action="AddDepartment" method="post">
            <div class="col-md-6 col-md-offset-3">
                <!--DepartmentCode-->
                <div>
                    <label asp-for="DepartmentCode" class="control-label col-md-3 col-xs-12"></label>
                    <div class="col-md-9 col-xs-12">
                        <input asp-for="DepartmentCode" type="text" class="form-control custominput" placeholder="کد دپارتمان..." autocomplete="off" />
                        <span asp-validation-for="DepartmentCode" class="text-danger"></span>
                    </div>
                </div>
                <!--DeparmentName-->
                <div>
                    <label asp-for="DepartmentName" class="control-label col-md-3 col-xs-12"></label>
                    <div class="col-md-9 col-xs-12">
                        <input asp-for="DepartmentName" type="text" class="form-control custominput" placeholder="نام دپارتمان..." autocomplete="off" />
                        <span asp-validation-for="DepartmentName" class="text-danger"></span>
                    </div>
                </div>
                <!--mokhafafDeparmentName-->
                <div>
                    <label asp-for="DepartmentMokhafaf" class="control-label col-md-3 col-xs-12"></label>
                    <div class="col-md-9 col-xs-12">
                        <input asp-for="DepartmentMokhafaf" type="text" class="form-control custominput" placeholder="مخفف دپارتمان..." autocomplete="off" />
                        <span asp-validation-for="DepartmentMokhafaf" class="text-danger"></span>
                    </div>
                </div>
                <!--DepaertmentPersianName-->
                <div>
                    <label asp-for="DepaertmentPersianName" class="control-label col-md-3 col-xs-12"></label>
                    <div class="col-md-9 col-xs-12">
                        <input asp-for="DepaertmentPersianName" type="text" class="form-control custominput" placeholder="نام فارسی دپارتمان..." autocomplete="off" />
                        <span asp-validation-for="DepaertmentPersianName" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-xs-12 form-group" style="margin-top:15px;">
                    <input type="submit" style="border:1px solid gray; border-radius:3px;"
                           value="ثبت دپارتمان" class="btn pull-right" />
                </div>
            </div>
        </form>
    </div>

</div>

