@model DPEnergy.DataModelLayer.ViewModels.P_JobCategoryViewModel
@{
    ViewData["Title"] = "AddJobCategory";
}

    <div class="content">
        <ul class="breadcrumb">
            <li><a asp-controller="Home" asp-action="index"><i class="icon-home2 position-left"></i> صفحه اصلی</a></li>
            <li><a href="#"><i class="position-left"></i> اطلاعات اولیه</a></li>
            <li><a asp-controller="JobCategory" asp-action="index"><i class="icon-person position-left"></i> لیست  رده های شغلی </a></li>
            <li class="active">اضافه کردن رده شغلی</li>
        </ul>
        <div class="panel panel-heading" style="box-shadow:3px 1px 1px 0 gray; border-radius:2px;">
            <span style="font-weight:bold;">
                <i class="icon-accessibility2"></i>
                فرم ثبت رده شغلی
            </span>
        </div>


        <div class="panel panel-body container-fluid" style="border-radius:2px; box-shadow:3px 1px 1px 0 gray;
                background-color:#e6e2e2;">

            <form asp-controller="JobCategory" asp-action="AddJobCategory" method="post">
                <div class="col-md-6 col-md-offset-3">
                    <!--JobCategoryName-->
                    <div>
                        <label asp-for="JobCategoryName" class="control-label col-md-3 col-xs-12"></label>
                        <div class="col-md-9 col-xs-12">
                            <input asp-for="JobCategoryName" type="text" class="form-control custominput" placeholder="نام رده شغلی..." autocomplete="off" />
                            <span asp-validation-for="JobCategoryName" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="col-xs-12 form-group" style="margin-top:15px;">
                        <input type="submit" style="border:1px solid gray; border-radius:3px;"
                               value="ثبت رده شغلی" class="btn pull-right" />
                    </div>
                </div>
            </form>
        </div>

    </div>

