@model IEnumerable<DPEnergy.DataModelLayer.Entities.DMS.BasicInformation.D_Section>
@using DPEnergy.CommonLayer.PublicClass
@{
    ViewData["Title"] = "Index";
}
<div class="content">

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Home</a></li>
            <li class="breadcrumb-item"><a href="#">Basic Information</a></li>
            <li class="breadcrumb-item active" aria-current="page">Section</li>
        </ol>
    </nav>
    <div class="panel panel-heading" style="box-shadow:3px 1px 1px 0 gray; border-radius:2px;">
        <span style="font-weight:bold;">
            <i class="glyphicon glyphicon-list"></i>
            Section List
        </span>
    </div>
    <div style="margin-bottom:5px;">
        <a class="btn customGreen1" asp-controller="Section" asp-action="AddSection">
            <i class="glyphicon glyphicon-plus"></i>
            Add Section
        </a>
    </div>


    <div>
        <div id="grid"></div>
    </div>
</div>
<div class="modal fade" id="myModaldeletor">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-controller="Section" asp-action="DeleteSectionPost" method="post">
                <div class="modal-header" style="background-color:darkred; color:white; border-radius:5px 5px 0 0;">
                    <h4 class="modal-title">Delete Section</h4>
                </div>

                <div class="modal-body" id="DeleteModalBody">

                </div>

                <div dir="rtl" class="modal-footer" style="text-align:left;">
                    <button class="btn btn-default" type="button" style="width:80px;" data-dismiss="modal">Reject</button>
                    <button type="submit" class="btn" style="width:80px; color:white; background-color:darkred;">
                        Accept
                    </button>
                </div>

            </form>

        </div>
    </div>
</div>
@Html.Partial("_Modal", new BootstrapModel { ID = "modal-action", Size = BootstrapModel.ModalSize.Large })
@section DMSScripts{
    <script>
        $(document).ready(function () {
           var myobj = '@Html.Raw(Json.Serialize(Model))';
            var dpjson = JSON.parse(myobj);
            console.log(dpjson);

            $("#grid").kendoGrid({
                dataSource: {
                    data: dpjson,
                    pageSize: dpjson.length
                },
                height: 550,
                filterable: true,
                groupable: true,
                sortable: true,
                toolbar: ["pdf", "search"],

                pageable: {
                    refresh: true,
                    pageSizes: true,
                    buttonCount: 5
                },
                columns: [{
                    field: "id",
                    title: "id"
                }, {
                    field: "name",
                    width: 150,
                    title: "Name"
                }, {
                    field: "projectCode",
                    width: 150,
                    title: "ProjectCode"
                },{
                    field: "description",
                    width: 150,
                    title: "Description"
                }, {
                     field: "order",
                     width: 150,
                     title: "Order"
                },  {
                     field: "creator",
                     width: 150,
                     title: "Creator"
                }, {
                     field: "creationDate",
                     width: 150,
                     title: "Creation Date"
                }, {
                     field: "modifier",
                     width: 150,
                     title: "Modifier"
                }, {
                     field: "modificationDate",
                     width: 200,
                     title: "Modification Date"
                },




                    {
                        width: 150,
                        command: [
                            {
                                name: "del",
                                text: "Delete",
                                click: function (e) {
                                    // command button click handler
                                    var item = this.dataItem($(e.currentTarget).closest("tr"));
                                    url = "/DMSArea/Section/DeleteSection";
                                    $.ajax({
                                        url: url,
                                        data: { id: item.id },
                                        type: 'Get',
                                        success: function (result) {
                                            $('#DeleteModalBody').html(result);
                                            $("#myModaldeletor").modal("show");
                                        },
                                        error: function (xhr, status) {
                                            alert(status);
                                        }
                                    });
                                }
                            },
                            {
                                name: "edit",
                                text: "Edit",
                                click: function (e) {
                                    // command button click handler
                                    var item = this.dataItem($(e.currentTarget).closest("tr"));
                                    console.log(item )
                                    window.location.href = '@Url.Action("EditSection", "Section")/' + item.id;
                                }
                            },

                        ]
                    }
                ]

            });
            var grid = $("#grid").data("kendoGrid");
            grid.hideColumn("id");

            //$("#grid").data("kendoGrid").wrapper.find(".k-grid-header-wrap").off("scroll.kendoGrid");

        });


    </script>
}


