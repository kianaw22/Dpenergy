@model DPEnergy.DataModelLayer.ViewModels.DMS.BasicInformation.D_DpDiciplineViewModel
@using DPEnergy.CommonLayer.PublicClass
@{
    ViewData["Title"] = "AddDpDicipline";
}
<div class="content">

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Home</a></li>
            <li class="breadcrumb-item"><a href="#">Basic Information</a></li>
            <li class="breadcrumb-item"><a href=" @Url.Action("Index", "DpDicipline") ">DpDicipline</a></li>
            <li class="breadcrumb-item active" aria-current="page">Add DpDicipline</li>
        </ol>
    </nav>
    <div class="panel panel-heading" style="box-shadow:3px 1px 1px 0 gray; border-radius:2px;">
        <span style="font-weight:bold;">
            <i class="glyphicon glyphicon-list"></i>
            Add New DpDicipline
        </span>
    </div>


    <div class="panel panel-body container-fluid" style="border-radius:2px; box-shadow:3px 1px 1px 0 gray; background-color:#dae7f4;">
        <form asp-controller="DpDicipline" asp-action="AddDpDicipline" method="post" enctype="multipart/form-data">

            <div class="col-md-6 col-md-offset-3">


                <!--Dicipline-->
                <div>
                    <label asp-for="Dicipline" class="control-label col-md-3 col-xs-12"></label>
                    <div class="col-md-9 col-xs-12">
                        <input asp-for="Dicipline" type="text" class="form-control custominput" placeholder="DpDicipline ..." autocomplete="off" />
                        <span asp-validation-for="Dicipline" class="text-danger"></span>
                    </div>

                </div>
                <!--Title-->
                <div>
                    <label asp-for="Title" class="control-label col-md-3 col-xs-12"></label>
                    <div class="col-md-9 col-xs-12">
                        <input asp-for="Title" type="text" class="form-control custominput" placeholder="Title ..." autocomplete="off" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                </div>

                <!--Order-->
                <div>
                    <label asp-for="Order" class="control-label col-md-3 col-xs-12"></label>
                    <div class="col-md-9 col-xs-12">
                        <input asp-for="Order" type="text" class="form-control custominput" placeholder="Order ..." autocomplete="off" />
                        <span asp-validation-for="Order" class="text-danger"></span>
                    </div>

                </div>  

                <div class="col-xs-12 form-group" style="margin-top:15px;">
                    <input type="submit" style="border:1px solid gray; border-radius:3px;"
                           value="Submit" class="btn pull-right" />
                </div>

            </div>

            

        </form>
    </div>
</div>
