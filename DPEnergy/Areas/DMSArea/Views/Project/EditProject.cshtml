@model DPEnergy.DataModelLayer.ViewModels.DMS.BasicInformation.D_ProjectViewModel
@{
    ViewData["Title"] = "EditProject";
    List<D_ProjectManager> ListProjectManager = ViewBag.projectmanagerlist;
    List<D_ProjectType> ListProjectType = ViewBag.projecttypelist;
    List<D_Contractor> ListContractor = ViewBag.contractorlist;
}

<div class="content">

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Home</a></li>
            <li class="breadcrumb-item"><a href="#">Basic Information</a></li>
            <li class="breadcrumb-item"><a href=" @Url.Action("Index", "Project") ">Project</a></li>
            <li class="breadcrumb-item active" aria-current="page">Edit Project</li>
        </ol>
    </nav>
    <div class="panel panel-heading" style="box-shadow:3px 1px 1px 0 gray; border-radius:2px;">
        <span style="font-weight:bold;">
            <i class="glyphicon glyphicon-list"></i>
            Edit Project
        </span>
    </div>


    <div class="panel panel-body container-fluid" style="border-radius:2px; box-shadow:3px 1px 1px 0 gray; background-color:#dae7f4;">
        <form asp-controller="Project" asp-action="EditProject" method="post" enctype="multipart/form-data">

            <div class="col-md-6 col-xs-12">


                <!--ProjectCode-->
                <div>
                    <label asp-for="ProjectCode" class="control-label col-md-3 col-xs-12"></label>
                    <div class="col-md-9 col-xs-12">
                        <input asp-for="ProjectCode" type="text" class="form-control custominput" placeholder="Project Code ..." autocomplete="off" />
                        <span asp-validation-for="ProjectCode" class="text-danger"></span>
                    </div>

                </div>
                <!--Title-->
                <div>
                    <label asp-for="Title" class="control-label col-md-3 col-xs-12"></label>
                    <div class="col-md-9 col-xs-12">
                        <input asp-for="Title" type="text" class="form-control custominput" placeholder="Title ..." autocomplete="off" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                </div>
                <!--PersianTitle-->
                <div>
                    <label asp-for="PersianTitle" class="control-label col-md-3 col-xs-12"></label>
                    <div class="col-md-9 col-xs-12">
                        <input asp-for="PersianTitle" type="text" class="form-control custominput" placeholder="PersianTitle ..." autocomplete="off" />
                        <span asp-validation-for="PersianTitle" class="text-danger"></span>
                    </div>

                </div>
                <!--Project Manager-->
                <div>
                    <label asp-for="ProjectManager" class="control-label col-md-3 col-xs-12"></label>
                    <div class="col-md-9 col-xs-12">
                        <select asp-for="ProjectManager" asp-items="@(new SelectList(ListProjectManager,"ProjectManager","ProjectManager"))" class="form-control selectpicker custominput" id="select-ProjectCode" data-live-search="true" style="direction: ltr">
                            <option value="" selected disabled hidden style="direction: ltr">Select Project Manager</option>
                        </select>
                        <div>   </div>
                    </div>

                </div>
                <!--ProjectType-->
                <div>
                    <label asp-for="ProjectType" class="control-label col-md-3 col-xs-12"></label>
                    <div class="col-md-9 col-xs-12">
                        <select asp-for="ProjectType" asp-items="@(new SelectList(ListProjectType,"ProjectType","ProjectType"))" class="form-control selectpicker custominput" id="select-ProjectCode" data-live-search="true" style="direction: ltr">
                            <option value="" selected disabled hidden style="direction: ltr">Select Project Type</option>
                        </select>
                        <div>   </div>
                    </div>

                </div>
                <!--ContractorCompany-->
                <div>
                    <label asp-for="Contractor" class="control-label col-md-3 col-xs-12"></label>
                    <div class="col-md-9 col-xs-12">
                        <select asp-for="Contractor" asp-items="@(new SelectList(ListContractor,"CompanyName","CompanyName"))" class="form-control selectpicker custominput" id="select-ProjectCode" data-live-search="true" style="direction: ltr">
                            <option value="" selected disabled hidden style="direction: ltr">Select Contractor Company </option>
                        </select>
                        <div>   </div>
                    </div>

                </div>

                <!--ContractorName-->
                <div>
                    <label asp-for="ContractorName" class="control-label col-md-3 col-xs-12"></label>
                    <div class="col-md-9 col-xs-12">
                        <select asp-for="ContractorName" asp-items="@(new SelectList(ListContractor,"ManagerName","ManagerName"))" class="form-control selectpicker custominput" id="select-ProjectCode" data-live-search="true" style="direction: ltr">
                            <option value="" selected disabled hidden style="direction: ltr">Select Contractor Name</option>
                        </select>
                        <div>   </div>
                    </div>

                </div>
                <!--Company-->
                <div>
                    <label asp-for="Company" class="control-label col-md-3 col-xs-12"></label>
                    <div class="col-md-9 col-xs-12">
                        <select asp-for="Company" class="form-control selectpicker custominput" id="select-Company" data-live-search="true" style="direction: ltr">
                            <option value="" selected disabled hidden style="direction: ltr">   Select company</option>
                            <option data-tokens="Daryapala Energy">  Daryapala Energy</option>

                        </select>
                        <div>   </div>
                    </div>

                </div>

            </div>

            <div class="col-md-6 col-xs-12">
                <!--ProjectCost-->
                <div>
                    <label asp-for="ProjectCost" class="control-label col-md-3 col-xs-12"></label>
                    <div class="col-md-9 col-xs-12">
                        <input asp-for="ProjectCost" type="text" class="form-control custominput" placeholder="Project Cost ..." autocomplete="off" />
                        <span asp-validation-for="ProjectCost" class="text-danger"></span>
                    </div>

                </div>
                <!--ContractDate-->
                <div>
                    <label asp-for="ContractDate" class="control-label col-md-3 col-xs-12"></label>
                    <div class="col-md-9 col-xs-12">
                        <input asp-for="ContractDate" type="date" class="form-control custominput" placeholder="Contract Date ..." autocomplete="off" />
                        <span asp-validation-for="ContractDate" class="text-danger"></span>
