                            <option data-tokens="قطعی">  قطعی</option>
                            <option data-tokens="خاتمه یافته">  خاتمه یافته</option>
                            <option data-tokens="کاریابی"> کاریابی</option>
                        </select>
                        <div>   </div>
                    </div>

                </div>

                <!--ServiceType-->
                <div>
                    <label class="control-label col-md-3 col-xs-12">Service Type</label>
                    <div class="col-md-9 col-xs-12">
                        <div class="form-check">
                            <input asp-for="EmkanSanji" class="form-check-input" type="checkbox" value="false" id="check1" onchange="ck1(this.value)" />
                            <label class="form-check-label" for="flexCheckDefault">امکان سنجی و طراحی مفهومی</label>
                        </div>
                        <div class="form-check">
                            <input asp-for="TarahiPaye" class="form-check-input" type="checkbox" value="false" id="check2" onchange="ck2(this.value)" />
                            <label class="form-check-label" for="flexCheckDefault"> طراحی پایه </label>
                        </div>
                        <div class="form-check">
                            <input asp-for="TarahiTafzili" class="form-check-input" type="checkbox" value="false" id="check3" onchange="ck3(this.value)" />
                            <label class="form-check-label" for="flexCheckDefault"> طراحی تفضیلی </label>
                        </div>
                        <div class="form-check">
                            <input asp-for="KhadamatKharid" class="form-check-input" type="checkbox" value="false" id="check4" onchange="ck4(this.value)" />
                            <label class="form-check-label" for="flexCheckDefault"> خدمات خرید </label>
                        </div>
                        <div class="form-check">
                            <input asp-for="Kharid" class="form-check-input" type="checkbox" value="false" id="check5" onchange="ck5(this.value)" />
                            <label class="form-check-label" for="flexCheckDefault">  خرید </label>
                        </div>
                        <div class="form-check">
                            <input asp-for="TahieAsnadMonaqese" class="form-check-input" type="checkbox" value="false" id="check6" onchange="ck6(this.value)" />
                            <label class="form-check-label" for="flexCheckDefault">  تهیه اسناد مناقضه </label>
                        </div>
                        <div class="form-check">
                            <input asp-for="NezaratAlie" class="form-check-input" type="checkbox" value="false" id="check7" onchange="ck7(this.value)" />
                            <label class="form-check-label" for="flexCheckDefault">  نظارت عالیه </label>
                        </div>
                        <div class="form-check">
                            <input asp-for="Karagahi" class="form-check-input" type="checkbox" value="false" id="check8" onchange="ck8(this.value)" />
                            <label class="form-check-label" for="flexCheckDefault">  کارآگاهی </label>
                        </div>
                        <div class="form-check">
                            <input asp-for="EPC" class="form-check-input" type="checkbox" value="false" id="check9" onchange="ck9(this.value)" />
                            <label class="form-check-label" for="flexCheckDefault"> EPC </label>
                        </div>
                        <div class="form-check">
                            <input asp-for="MTO" class="form-check-input" type="checkbox" value="false" id="check10" onchange="ck10(this.value)" />
                            <label class="form-check-label" for="flexCheckDefault"> MTO </label>
                        </div>
                        <div class="form-check">
                            <input asp-for="MC" class="form-check-input" type="checkbox" value="false" id="check11" onchange="ck11(this.value)" />
                            <label class="form-check-label" for="flexCheckDefault"> MC </label>
                        </div>
                        <div class="form-check">
                            <input asp-for="Gheire" class="form-check-input" type="checkbox" value="false" id="check12" onchange="ck12(this.value)" />
                            <label class="form-check-label" for="flexCheckDefault"> غیره </label>
                        </div>
                        <div class="form-check">
                            <input asp-for="BaravardHazine" class="form-check-input" type="checkbox" value="false" id="check13" onchange="ck13(this.value)" />
                            <label class="form-check-label" for="flexCheckDefault"> برآورد هزینه </label>
                        </div>
                    </div>

                </div>
                <!--Creation Date -->
                <input asp-for="CreationDate" type="hidden" class="form-control custominput" />
                <!--Creator-->
                <input asp-for="Creator" type="hidden" class="form-control custominput" />

                <!--ModificationDate -->
                <input asp-for="ModificationDate" type="hidden" class="form-control custominput" />
                <!--Modifier-->
                <input asp-for="Modifier" type="hidden" class="form-control custominput" />


                <div class="col-xs-12 form-group" style="margin-top:15px;">
                    <input type="submit" style="border:1px solid gray; border-radius:3px;"
                           value="Submit" class="btn pull-right" />
                </div>
            </div>

        </form>
    </div>
</div>

