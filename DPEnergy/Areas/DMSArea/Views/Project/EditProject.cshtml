                    <div class="col-md-9 col-xs-12">
                        <input asp-for="CompletionDate" type="date" class="form-control custominput" autocomplete="off" />
                        <span asp-validation-for="CompletionDate" class="text-danger"></span>
                    </div>

                </div>
                <!--Users-->
                <div>
                    <label asp-for="Users" class="control-label col-md-3 col-xs-12"></label>
                    <div class="col-md-9 col-xs-12">
                        <input asp-for="Users" type="text" class="form-control custominput" placeholder="Users ..." autocomplete="off" />
                        <span asp-validation-for="Users" class="text-danger"></span>
                    </div>

                </div>
                <!--Activation-->
                <div>
                    <label asp-for="Activation" class="control-label col-md-3 col-xs-12"></label>
                    <div class="col-md-9 col-xs-12">
                        <select asp-for="Activation" class="form-control selectpicker custominput" id="select-Company" data-live-search="true" style="direction: ltr">
                            <option value="" selected disabled hidden style="direction: ltr">   Select Activation</option>
                            <option data-tokens="Active">  Active</option>
                            <option data-tokens="Deactive">  Deactive</option>
                        </select>
                        <div>   </div>
                    </div>

                </div>
                <!--Order-->
