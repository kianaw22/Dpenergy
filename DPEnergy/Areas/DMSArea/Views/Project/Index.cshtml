                  },




                    {
                        width: 150,
                        command: [
                       
                            {
                                name: "del",
                                text: "Delete",
                                click: function (e) {
                                    // command button click handler
                                    var item = this.dataItem($(e.currentTarget).closest("tr"));
                                    url = "/DMSArea/Project/DeleteProject";
                                    $.ajax({
                                        url: url,
                                        data: { id: item.id },
                                        type: 'Get',
                                        success: function (result) {
                                            $('#DeleteModalBody').html(result);
                                            $("#myModaldeletor").modal("show");
                                        },
                                        error: function (xhr, status) {
                                            alert(status);
                                        }
                                    });
                                }
                            },
                            {
                                name: "edit",
                                text: "Edit",
                                click: function (e) {
                                    // command button click handler
                                    var item = this.dataItem($(e.currentTarget).closest("tr"));
                                    console.log(item )
                                    window.location.href = '@Url.Action("EditProject", "Project")/' + item.id;
                                }
                            },

                        ]
                    }
                ]

            });
            var grid = $("#grid").data("kendoGrid");
            grid.hideColumn("id");
            grid.hideColumn("order");

            //$("#grid").data("kendoGrid").wrapper.find(".k-grid-header-wrap").off("scroll.kendoGrid");

        });


